extends layout 

block content 
    h1 ID: #{book_instance.id}

    p #[strong Book:]
        a(href=book_instance.book.url) #{book_instance.book.title}

    p #[strong Status:]
        if book_instance.status =='Available'
            p.text-success #{book_instance.status}
        else if book_instance.status =='Maintenance'
            p.text-danger #{book_instance.status} - #{book_instance.due_back_formatted}
                
        else 
            p.text-warning #{book_instance.status} - #{book_instance.due_back_formatted}
                
            