extends layout 

block content 
    h1 Name: #{author.name}

    if author.date_of_birth
        p #[strong Born:] #{author.date_of_birth}
    if author.date_of_death
        p #[strong Death:] #{author.date_of_death}

    div(style="margin-left:20px;margin-top:20px")
        h4 Books

        ul 
            each book in book_list 
                li 
                    a(href=book.url) #{ book.title}


            else 
                li this author didn't wrote any books.
